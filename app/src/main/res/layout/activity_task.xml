<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextNameTaskLayout"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/purple_500"
        android:ems="10"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTypeSpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTaskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:inputType="textShortMessage" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Тип задания"
        app:layout_constraintBottom_toTopOf="@id/editTextTypeSpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNameTaskLayout">

    </com.google.android.material.textview.MaterialTextView>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/editTextTypeSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="70dp"
        android:minHeight="48dp"
        android:spinnerMode="dropdown"
        android:background="?colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/editTextDifficultySpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNameTaskLayout" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Сложность"
        app:layout_constraintBottom_toTopOf="@id/editTextDifficultySpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextTypeSpinner">

    </com.google.android.material.textview.MaterialTextView>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/editTextDifficultySpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="70dp"
        android:minHeight="48dp"
        android:spinnerMode="dropdown"
        android:background="?colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/editTextPrioritySpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextTypeSpinner" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Приорететность"
        app:layout_constraintBottom_toTopOf="@id/editTextPrioritySpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextDifficultySpinner">

    </com.google.android.material.textview.MaterialTextView>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/editTextPrioritySpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="70dp"
        android:minHeight="48dp"
        android:spinnerMode="dropdown"
        android:background="?colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/datePickerTask"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextDifficultySpinner" />


<com.google.android.material.switchmaterial.SwitchMaterial
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Deadline"
    android:layout_margin="16dp"
    app:layout_constraintBottom_toTopOf="@id/datePickerTask"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/editTextPrioritySpinner">

</com.google.android.material.switchmaterial.SwitchMaterial>

    <DatePicker
        android:id="@+id/datePickerTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextPrioritySpinner">

    </DatePicker>

</androidx.constraintlayout.widget.ConstraintLayout>